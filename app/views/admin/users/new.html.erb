<%= stylesheet_link_tag 'global/stylesheet' %>
<%= stylesheet_link_tag 'usuarios/usuarios' %>

<div class="return">
  <%= link_to "← Voltar para Usuários", admin_users_path %>
</div>

<div class="usuarios-container">
  <h1>Novo Usuário</h1>
  
  <%= form_with model: [:admin, @user], local: true, class: "usuarios-form" do |form| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="usuarios-form-fields">
      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-input" %>
      </div>

      <div class="field">
        <%= form.label :password, "Senha" %>
        <%= form.password_field :password, class: "form-input" %>
      </div>

      <div class="field">
        <%= form.label :password_confirmation, "Confirmação de Senha" %>
        <%= form.password_field :password_confirmation, class: "form-input" %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "Criar Usuário", class: "submit-button" %>
    </div>
  <% end %>
</div>