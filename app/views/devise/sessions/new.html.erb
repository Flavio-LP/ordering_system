<div class="login-container">
  <h1> Ordering System </h1>
  <div class="login-card">
    <div class="login-header">
      <h2>Bem-vindo</h2>
      <p>Faça login para continuar</p>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert-message alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'E-mail' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input', placeholder: 'seu@email.com' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Senha' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-input', placeholder: '••••••••' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group-checkbox">
          <%= f.check_box :remember_me, class: 'form-checkbox' %>
          <%= f.label :remember_me, 'Lembrar-me', class: 'checkbox-label' %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "Entrar", class: 'btn-login' %>
      </div>
    <% end %>

    <div class="login-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>