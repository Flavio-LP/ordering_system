<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h2>Esqueceu sua senha?</h2>
      <p>Digite seu e-mail para receber instruções</p>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert-message alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, 'E-mail' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input', placeholder: 'seu@email.com' %>
      </div>

      <div class="form-actions">
        <%= f.submit "Enviar instruções", class: 'btn-login' %>
      </div>
    <% end %>

    <div class="login-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>