<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h2>Alterar senha</h2>
      <p>Digite sua nova senha</p>
    </div>

    <% if flash[:alert] %>
      <div class="alert-message alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert-message alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'login-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Nova senha" %>
        <% if @minimum_password_length %>
          <small style="color: #718096; font-size: 12px;">(<%= @minimum_password_length %> caracteres no mínimo)</small>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-input', placeholder: '••••••••' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmar nova senha" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input', placeholder: '••••••••' %>
      </div>

      <div class="form-actions">
        <%= f.submit "Alterar minha senha", class: 'btn-login' %>
      </div>
    <% end %>

    <div class="login-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>